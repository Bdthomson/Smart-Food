<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/cuisinebg">

    <GridView
        android:id="@+id/customgrid"
        android:adjustViewBounds="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="2"
        android:verticalSpacing="0dp"
        android:layout_below="@+id/os_texts"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp" />

    <Button
        android:text="Save Cuisine Choices"
        android:layout_width="200dp"
        android:layout_height="90dp"
        android:id="@+id/save_categories"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="190dp"
        android:layout_alignTop="@+id/customgrid"
        />

    <TextView
        android:id="@+id/os_texts"
        android:layout_width="300dp"
        android:gravity="center"
        android:layout_height="60dp"
        android:text=""
        android:textSize="25dp"
        android:textAlignment="center"
        android:background="@drawable/favs"
        android:textColor="@android:color/background_dark"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>