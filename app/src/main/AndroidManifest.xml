<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.schachte.android.proactive_food_app">

    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <uses-feature
        android:name="android.hardware.camera.autofocus"
        android:required="false"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/taco_in_a_toaster"
        android:label="SmartFood"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".activities.HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activities.PreferencesActivity">
        </activity>
        <activity android:name=".activities.category_activity.CategoryActivity">
        </activity>
        <activity android:name=".activities.AddIngredientsActivity">
        </activity>
        <activity android:name=".activities.PantryActivity">
        </activity>
        <activity android:name=".activities.recipe_list_activity.RecipeListActivity"
                  android:parentActivityName=".activities.HomeActivity" />

    </application>

</manifest>